<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:stretchColumns="2">
<TableRow>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=""/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Open..."
        android:textColor="@color/white"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=" "
         />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Ctrl-O"
        android:textColor="@color/white"
        android:paddingBottom="5dp"
        />
</TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Save..."
            android:textSize="@dimen/activity_horizontal_margin"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=" "
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Ctrl-S"
            android:textColor="@color/white"
            android:paddingBottom="5dp"
            />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Save As..."
            android:textColor="@color/white"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=" "
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Ctrl-Shift-S"
            android:textColor="@color/white"
            />
    </TableRow>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        />
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=" X "
            android:textColor="@color/white"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Import..."
            android:textColor="@color/white"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:textColor="@color/white"
            />

    </TableRow>
    <TableRow>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=" X "
            android:textColor="@color/white"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Export..."
            android:textColor="@color/white"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=" "
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Ctrl-E"
            android:textColor="@color/white"
            />
    </TableRow>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        />
    <TableRow>
        <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=""/>


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Quit"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=" "
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=""
            android:textColor="@color/white"
            />
    </TableRow>

</TableLayout>